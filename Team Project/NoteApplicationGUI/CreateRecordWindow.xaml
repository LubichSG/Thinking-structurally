<Window x:Class="NoteApplicationGUI.CreateRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteApplicationGUI"
        mc:Ignorable="d"
        Title="CreateRecordWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Resources/Pastel.jpg" Stretch="Fill"></ImageBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Center"
                   Margin="10" FontFamily="Comic Sans MS" FontSize="20">
            Create a new record!
        </TextBlock>
       
        <Button Name="ToDoListButton" Click="ToDoListButton_Click"
                VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1"
                Width="342" Height="50" FontFamily="Comic Sans MS" FontSize="20">
            Organize to-do list structure
        </Button>
        <Button Name="HaphazardIdeaButton" Click="HaphazardIdeaButton_Click"
                VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2"
                Width="342" Height="50" FontFamily="Comic Sans MS" FontSize="20">
            Haphazard ideas
        </Button>
        <Button Name="ViewSampleTemplatesButton"  Click="ViewSampleTemplatesButton_Click"
                VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3"
                Width="342" Height="50" FontFamily="Comic Sans MS" FontSize="20">
            View sample templates
        </Button>

        <Button Name="BackButton"  Click="BackButton_Click"
                VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="4"
                Width="342" Height="50" FontFamily="Comic Sans MS" FontSize="20">
            Back
        </Button>

    </Grid>
</Window>
